{
    "name": "ixavier/Content",
    "version": "1.1",
    "description": "Content service for iXavier framework.",
    "keywords": ["iXavier", "iXavier content"],
    "license": "MIT",
    "type": "project",
    "require": {
        "ixavier/Libraries": "0.1",
        "php": ">=7.1",
        "jenssegers/mongodb": "^3.1",
        "laravel/framework": "5.4.*",
        "laravel/tinker": "~1.0",
        "predis/predis": "^1.1",
        "tymon/jwt-auth": "0.5.*"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7"
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "ixavier/Libraries",
                "version": "0.1",
                "source": {
                    "url": "https://github.com/xaviered/Libraries.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        }
    ],
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/",
            "Plugins\\": "plugins/",
            "ixavier\\Libraries\\" : "vendor/ixavier/Libraries/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "dockerize -wait tcp://content-data:27017 -timeout 1200s -wait-retry-interval 5s mongo content-data:27017/admin etc/db-init.js"
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
